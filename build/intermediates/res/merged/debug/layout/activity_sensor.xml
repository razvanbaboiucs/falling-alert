<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/axe_icon"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:keepScreenOn="true"
    tools:context="com.example.fallingalerter.SensorActivity">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/axaX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/axaX"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/axaY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/axaY"
        android:layout_marginBottom="108dp"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_above="@+id/axaX"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.AppCompatTextView
    android:id="@+id/axaZ"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/axaZ"
    android:layout_marginBottom="102dp"
    android:layout_marginLeft="39dp"
    android:layout_marginStart="39dp"
    android:layout_alignParentBottom="true"
    android:layout_alignLeft="@+id/axaY"
    android:layout_alignStart="@+id/axaY" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/maxValues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maxValues"
        android:gravity="right"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/axaY"
        android:layout_toRightOf="@+id/axaZ"
        android:layout_toEndOf="@+id/axaZ" />

</RelativeLayout>
